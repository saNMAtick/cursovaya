<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Приветствие -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Приветствуем вас, Кирилл"
            android:textSize="20sp"
            android:padding="16dp"/>

        <!-- Популярные запросы -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Популярные запросы"
            android:textSize="18sp"
            android:padding="16dp"/>

        <!-- Список городов -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivMoscow"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="Москва"
                android:src="@android:drawable/alert_dark_frame" />

            <ImageView
                android:id="@+id/ivVoronezh"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="Воронеж"
                android:src="@android:drawable/alert_dark_frame" />

            <ImageView
                android:id="@+id/ivRostov"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="Ростов"
                android:src="@android:drawable/alert_dark_frame" />
        </LinearLayout>

        <!-- Отели для тебя -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Отели для тебя"
            android:textSize="18sp"
            android:padding="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivKirov"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="Киров"
                android:src="@android:drawable/alert_dark_frame" />

            <ImageView
                android:id="@+id/ivMoscow2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="Москва"
                android:src="@android:drawable/alert_dark_frame" />

            <ImageView
                android:id="@+id/ivNyurpe"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="Нюрпе"
                android:src="@android:drawable/alert_dark_frame" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>